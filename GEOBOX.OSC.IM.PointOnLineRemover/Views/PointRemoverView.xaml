<Window x:Class="GEOBOX.OSC.IM.PointOnLineRemover.Views.PointRemoverView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
        xmlns:local="clr-namespace:GEOBOX.OSC.IM.PointOnLineRemover.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="gbBatchConfigWindow"
        Width="1080"
        Height="768"
        MinWidth="1080"
        MinHeight="768"
        AllowDrop="True"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        Style="{DynamicResource gbxMainWindowStyle}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="WpfStylesResourceDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid x:Name="MainWindowGrid" Margin="0,0,0,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid" MouseLeftButtonDown="HeaderGrid_MouseLeftButtonDown">
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource gbxMainWindowStyleBorderColor}" />
            </Grid.Background>
            <StackPanel x:Name="TitleBarSoftwareStackPanel"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                <Image x:Name="SoftwareIcon"
                       Width="28"
                       Height="30"
                       Margin="2,0,0,0"
                       HorizontalAlignment="Left"
                       Source="/GEOBOX.OSC.IM.PointOnLineRemover;component/Includes/oiIconWpf_24.png"
                       Stretch="None" />
                <Label x:Name="WindowTitleLabel"
                       Height="30"
                       Margin="0"
                       VerticalContentAlignment="Bottom"
                       Content="GEOBOX Stützpunkte entfernen"
                       FontSize="13.333"
                       FontWeight="Bold">
                    <Label.Foreground>
                        <SolidColorBrush Color="{DynamicResource gbxMainWindowTitelBarFontColor}" />
                    </Label.Foreground>
                </Label>
                <Label x:Name="InfoVersionLabel"
                       Height="30"
                       VerticalContentAlignment="Bottom"
                       Content="{Binding SyncVersion}"
                       FontSize="10.667"
                       Foreground="#99FFFFFF"
                       UseLayoutRounding="False" />
            </StackPanel>
            <StackPanel x:Name="TitleBarStackPanel"
                        Width="68"
                        Height="24"
                        Margin="0,1,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Orientation="Horizontal"
                        RenderTransformOrigin="0.485,0.458"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                <Button x:Name="btn_Minimize"
                        Click="MainWindow_Minimize"
                        Style="{DynamicResource SettingWindowTitleBarButton}"
                        ToolTip="Verkleinern">
                    <Grid Width="30" Height="24">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Marlett"
                                   FontSize="14"
                                   Padding="3.5,0,0,3"
                                   Text="0">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource gbxMainWindowTitelBarFontColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                </Button>
                <Button x:Name="btn_Close"
                        Click="MainWindow_Close"
                        Style="{DynamicResource SettingWindowTitleBarButton}"
                        ToolTip="Schliessen">
                    <Grid Width="30" Height="25">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontFamily="Marlett"
                                   FontSize="14"
                                   Padding="0,0,0,1"
                                   Text="r">
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="{DynamicResource gbxMainWindowTitelBarFontColor}" />
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Grid>
                </Button>
            </StackPanel>
        </Grid>
        <Grid x:Name="ContentGrid"
              Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="650" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="5"/>
                <RowDefinition/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <GroupBox x:Name="CoordinateFileSelect"
                      Header="Koordinatendatei auswählen:">
                <DockPanel>
                    <TextBox x:Name="CoordinateFilePathTextbox" IsEnabled="False" Text="{Binding CoordinateFilePath}" Margin="0,0,10,0" Width="590" />
                    <Button x:Name="ChooseCoordinateFilePathButton" Content="..." HorizontalAlignment="Right" DockPanel.Dock="Right" Click="ChooseCoordinateFilePathButton_Click" Width="25" />
                </DockPanel>
            </GroupBox>

            <GroupBox x:Name="CoordinatesListGroupBox"
                      Header="Koordinaten der Punkte:" Grid.Row="2" Grid.Column="0">
                <Grid x:Name="CoordinatesListGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="CoordinatesListBox" ItemsSource="{Binding PointCoordinateDetails}" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Checked="CoodinatesCheckBox_Checked" Unchecked="CoodinatesCheckBox_Unchecked" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding ID}" Header="ID" Width="150"/>
                                <GridViewColumn DisplayMemberBinding="{Binding East}" Header="E/Y Wert" Width="150"/>
                                <GridViewColumn DisplayMemberBinding="{Binding North}" Header="N/X Wert" Width="150"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="SelectAllCoodinatesButton" Content="Alle Auswählen" HorizontalAlignment="Left" Grid.Row="1" Width="150" VerticalAlignment="Center" Height="25" Click="SelectAllCoodinatesButton_Click"/>
                    <Button x:Name="DeselectAllCoodinatesButton" Content="Auswahl aufheben" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="150" Height="25" Click="DeselectAllCoodinatesButton_Click"/>
                </Grid>
            </GroupBox>

            <GroupBox x:Name="FeatureClassSelectGroupBox"
                Header="Verfügbare Objektklassen in der Fachschale:" Grid.Row="2" Grid.Column="2">
                <Grid x:Name="FeatureClassSelectGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="AvailableFeatureClassesListBox" ItemsSource="{Binding FeatureClassDetails}" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False">
                                <GridViewColumn Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Checked="FeatureClassesCheckBox_Checked" Unchecked="FeatureClassesCheckBox_Unchecked"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn DisplayMemberBinding="{Binding DisplayName}" Header="Objektklasse" Width="350"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button x:Name="SelectAllFeatureClassesButton" Content="Alle Auswählen" HorizontalAlignment="Left" Grid.Row="1" Width="150" VerticalAlignment="Center" Height="25" Click="SelectAllFeatureClassesButton_Click"/>
                    <Button x:Name="DeselectAllFeatureClassesButton" Content="Auswahl aufheben" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="150" Height="25" Click="DeselectAllFeatureClassesButton_Click"/>
                </Grid>
            </GroupBox>

            <Button x:Name="RemovePointsButton" Content="Punkte entfernen..." Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Width="150" IsEnabled="{Binding IsReadyForRemove}" Click="RemovePointsButton_Click" Grid.Row="4" Height="25" Margin="0,0,5,0"/>
            <GroupBox x:Name="LogFileSelect"
                Header="Protokolldatei auswählen:" Grid.Row="4">
                <DockPanel>
                    <TextBox x:Name="LogFilePathTextbox" IsEnabled="False" Text="{Binding LogFilePath}" Margin="0,0,10,0" Width="590" />
                    <Button x:Name="ChooseLogFilePathButton" Content="..." HorizontalAlignment="Right" DockPanel.Dock="Right" Click="ChooseLogFilePathButton_Click" Width="25" />
                </DockPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>